{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/src/**/*.[tj]s?(x)",
    "test-utils/*.[tj]s?(x)",
    "!client/src/index.tsx",
    "!server/src/index.ts"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/__generated__/"
  ],
  "moduleFileExtensions": [
    "ts", "tsx", "js"
  ],
  "coverageReporters": [
    "html", "text-summary"
  ],
  "preset": "ts-jest",
  "setupFilesAfterEnv": [
    "<rootDir>/client/src/jest.setup.ts"
  ],
  "testEnvironment": "jsdom",
  "testMatch": [
    "**/__tests__/**/*.[jt]s?(x)"
  ],
  "transform": {
    "\\.graphql": "<rootDir>/test-utils/gqlTransformer.js"
  }
}
